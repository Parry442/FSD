# Application Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# DynamoDB Configuration
DYNAMODB_TABLE=testing-suite
DYNAMODB_ENDPOINT=http://localhost:8000

# S3 Configuration
S3_BUCKET=testing-suite-logs
S3_ENDPOINT=http://localhost:9000

# Step Functions Configuration
STEP_FUNCTIONS_ARN=arn:aws:states:us-east-1:123456789012:stateMachine:testing-suite-workflow

# MWAA (Airflow) Configuration
MWAA_ENVIRONMENT=testing-suite-airflow

# SQS Configuration
TEST_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/testing-suite-queue

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Lambda Configuration
LAMBDA_FUNCTION_PREFIX=testing-suite

# CloudWatch Configuration
CLOUDWATCH_LOG_GROUP=/aws/testing-suite

# OpenSearch Configuration
OPENSEARCH_ENDPOINT=https://your-opensearch-domain.us-east-1.es.amazonaws.com

# Snowflake Configuration (Optional)
SNOWFLAKE_ACCOUNT=your_account
SNOWFLAKE_USERNAME=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=TESTING_SUITE
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_SCHEMA=PUBLIC

# dbt Configuration (Optional)
DBT_PROJECT_DIR=./dbt
DBT_TARGET=dev

# Testing Tools Configuration
PLAYWRIGHT_BROWSERS_PATH=./browsers
CYPRESS_CACHE_FOLDER=./cypress-cache
JEST_CACHE_DIRECTORY=./jest-cache

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_LOGGING=true
LOG_LEVEL=info

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CORS=true
ENABLE_HELMET=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/csv
UPLOAD_DIR=./uploads

# AI Configuration
ENABLE_AI_FEATURES=true
AI_MODEL_TIMEOUT=30000
AI_MAX_TOKENS=4000

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600